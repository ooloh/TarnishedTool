<UserControl x:Class="TarnishedTool.Views.Tabs.EventTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:TarnishedTool.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">

    <UserControl.Resources>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Event Flags"
                               FontWeight="Bold" />

                    <Border Background="#3498db"
                            CornerRadius="10"
                            Width="12"
                            Height="12"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="Get or set event by Event ID"
                            ToolTipService.InitialShowDelay='100'>
                        <TextBlock Text="i"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </StackPanel>

                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                </Grid>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <TextBlock Text="Event ID:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox Width="100" Text="{Binding GetFlagId}" Margin="0,0,10,0" />

                    <Button Content="Get Event"
                            IsEnabled="{Binding AreOptionsEnabled}"
                            Padding="10,3"
                            Margin="10,0,0,0"
                            Command="{Binding GetEventCommand}" />

                    <TextBlock Text="State:" VerticalAlignment="Center" Margin="10,0,5,0" />
                    <TextBlock Text="{Binding EventStatusText}"
                               Foreground="{Binding EventStatusColor}"
                               VerticalAlignment="Center" Margin="5,0,10,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <TextBlock Text="Event ID:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox Width="100" Text="{Binding SetFlagId}" Margin="0,0,10,0" />

                    <ComboBox Width="70" SelectedIndex="{Binding FlagStateIndex}" Margin="10,0,0,0">
                        <ComboBoxItem Content="ON" />
                        <ComboBoxItem Content="OFF" />
                    </ComboBox>

                    <Button Content="Set Event"
                            IsEnabled="{Binding AreOptionsEnabled}"
                            Padding="10,3"
                            Margin="10,0,0,0"
                            Command="{Binding SetEventCommand}" />
                </StackPanel>
            </StackPanel>
        </Border>


        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,0">
            <StackPanel Margin="10">
                <TextBlock Text="Game Progression"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Content="Unlock All Affinities"
                            IsEnabled="{Binding AreOptionsEnabled}"
                            Command="{Binding UnlockWhetbladesCommand}"
                            Margin="0,2" />
                    <Button Grid.Row="0" Grid.Column="1" Content="Unlock All Gestures"
                            IsEnabled="{Binding AreOptionsEnabled}"
                            Command="{Binding UnlockGesturesCommand}"
                            Margin="10, 0, 0,2" />

                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">

                        <Button Content="DLC Clear Flag"
                                Width="120"
                                Command="{Binding ClearDlcCommand}"
                                Margin="0,2">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsDlcAvailable" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>

                        <Border Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="This is a newly introduced stat modifier that increases the HP of bosses and enemies in the DLC.&#x0a;This modifier activates after defeating Promised Consort Radahn and going to the next game cycle.&#x0a;This modifier does not go away once it's activated and is a flat value meaning if you go to the next cycle the HP boost % remains the same.&#x0a;This modifier also does NOT affect base game bosses and enemies."
                                ToolTipService.InitialShowDelay="100">
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>

                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">

                        <Button Content="Unlock Metyr"
                                Command="{Binding UnlockMetyrCommand}"
                                Width="120"
                                Margin="0,2">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="AreOptionsEnabled" />
                                    <Binding Path="IsDlcAvailable" />
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>

                        <Border Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="This will finish the quest as well as skip the invader before Metyr"
                                ToolTipService.InitialShowDelay="100">
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>

                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                        <Button Content="Fight Fortissax"
                                Width="120"
                                Command="{Binding FightFortissaxCommand}"
                                IsEnabled="{Binding AreOptionsEnabled}"
                                Margin="0,2">

                        </Button>

                        <Border Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="Need to be somewhere in Deeproot Depths"
                                ToolTipService.InitialShowDelay="100">
                            <TextBlock Text="i"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="10" />
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        <Border Grid.Row="3"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,10,0,0">
            <StackPanel Margin="10">
                <TextBlock Text="Additional Options"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <CheckBox
                            Content="Draw Events"
                            IsChecked="{Binding IsDrawEventsEnabled}">
                        </CheckBox>

                        <CheckBox
                            Content="Disable Events"
                            IsChecked="{Binding IsDisableEventsEnabled}">

                        </CheckBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>