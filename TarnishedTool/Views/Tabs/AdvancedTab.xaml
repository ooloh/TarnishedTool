<UserControl x:Class="TarnishedTool.Views.Tabs.AdvancedTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:converters="clr-namespace:TarnishedTool.Converters"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="600">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="10,20,0,00"
                MaxWidth="500">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15">
                    <TextBlock Text="Spawn with Equip Param ID" 
                               FontWeight="Bold"
                                />
                    <Border Background="#3498db" 
                            CornerRadius="10" 
                            Width="12" 
                            Height="12" 
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            ToolTip="This is mostly for ease of testing custom/modded weapons, please use the normal item spawn if you are not into that"
                            ToolTipService.InitialShowDelay="100">
                        <TextBlock Text="i" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold" 
                                   FontSize="10" />
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <ComboBox ItemsSource="{Binding EquipTypes}"
                              DisplayMemberPath="Key"
                              SelectedValuePath="Value"
                              Width="100"
                              Height="35"
                              VerticalContentAlignment="Center"
                              SelectedValue="{Binding SelectedEquipType}" />

                    <TextBlock Text="Equip ID:"
                               Height="20" 
                               Width="60" 
                               FontSize="14"
                               Margin="15,0,5,0"
                               VerticalAlignment="Center"
                               TextAlignment="Right" />

                    <TextBox Text="{Binding EquipId}"
                             Height="35" 
                             Width="100" 
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             MaxLength="8" />

                    <Button Content="Spawn"
                            Command="{Binding SpawnWithEquipIdCommand}"
                            IsEnabled="{Binding AreOptionsEnabled}"
                            Margin="15,0,0,0"
                            Height="35"
                            Width="80" />
                </StackPanel>
            </Grid>
        </Border>
        <Button Grid.Row="1" Content="Open Param Editor Test" Command="{Binding OpenParamEditorCommand}">
            
        </Button>
    </Grid>


</UserControl>