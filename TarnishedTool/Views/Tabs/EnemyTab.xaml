<UserControl x:Class="TarnishedTool.Views.Tabs.EnemyTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:TarnishedTool.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />
    </UserControl.Resources>
    <TabControl>
        <TabItem Header="General">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderThickness="1"
                        BorderBrush="#333"
                        CornerRadius="3"
                        Margin="0,0,0,5">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="All Enemies"
                                       Grid.Column="0" />
                        </Grid>

                        <Grid Margin="20,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>


                            <CheckBox Content="No Death"
                                      IsChecked="{Binding IsNoDeathEnabled}"
                                      Grid.Column="0" Grid.Row="0"
                                      Margin="0,2" />

                            <CheckBox Content="No Damage"
                                      IsChecked="{Binding IsNoDamageEnabled}"
                                      Grid.Column="0" Grid.Row="1"
                                      Margin="0,2" />

                            <CheckBox Content="No Hit"
                                      IsChecked="{Binding IsNoHitEnabled}"
                                      Grid.Column="0" Grid.Row="2"
                                      Margin="0,2" />

                            <CheckBox Content="No Attack"
                                      IsChecked="{Binding IsNoAttackEnabled}"
                                      Grid.Column="0" Grid.Row="3"
                                      Margin="0,2" />

                            <CheckBox Content="No Move"
                                      IsChecked="{Binding IsNoMoveEnabled}"
                                      Grid.Column="1" Grid.Row="0"
                                      Margin="0,2" />

                            <CheckBox Content="Disable Ai"
                                      IsChecked="{Binding IsDisableAiEnabled}"
                                      Grid.Column="1" Grid.Row="1"
                                      Margin="0,2" />

                            <CheckBox Content="Targeting View"
                                      IsChecked="{Binding IsTargetingViewEnabled}"
                                      Grid.Column="1" Grid.Row="2"
                                      Margin="0,2" />

                            <CheckBox Content="Reduced Targeting View"
                                      IsChecked="{Binding IsDrawReducedTargetViewEnabled}"
                                      IsEnabled="{Binding IsTargetingViewEnabled}"
                                      Grid.Column="1" Grid.Row="3" Margin="10,2,0,2" />

                            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4" Margin="10,2,0,2">
                                <Slider Name="DistanceSlider"
                                        Minimum="50"
                                        Maximum="150"
                                        Value="{Binding ReducedTargetViewDistance}"
                                        Width="100"
                                        TickFrequency="10"
                                        IsSnapToTickEnabled="True"
                                        IsEnabled="{Binding IsDrawReducedTargetViewEnabled}"
                                        Margin="10,0,5,0">
                                </Slider>
                                <TextBlock
                                    Text="{Binding ElementName=DistanceSlider, Path=Value, StringFormat='{}{0}'}"
                                    VerticalAlignment="Center"
                                    Margin="5,0,5,0" />

                                <Border Background="#3498db"
                                        CornerRadius="10"
                                        Width="12"
                                        Height="12"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        ToolTip="Filters out target views that are not within a certain&#x0A;distance from the player to improve performance"
                                        ToolTipService.InitialShowDelay="100">
                                    <TextBlock Text="i"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"
                                               FontSize="10" />
                                </Border>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1"
                        BorderThickness="1"
                        BorderBrush="#333"
                        CornerRadius="3"
                        Margin="0,0,0,5">
                    <StackPanel Margin="10">
                        <StackPanel Orientation=" Horizontal">
                            <TextBlock Text="Elden Beast"
                                       Margin="0,0,0,10" />
                            <Border
                                Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="10,0,0,10"
                                VerticalAlignment="Center"
                                ToolTip="Force Elden Stars followed up by the selected attack"
                                ToolTipService.InitialShowDelay='100'>
                                <TextBlock Text="i"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="10" />
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">

                            <ComboBox ItemsSource="{Binding Acts}"
                                      DisplayMemberPath="Name"
                                      SelectedItem="{Binding SelectedAct}"
                                      Width="150" />

                            <Button Content="Force Combo"
                                    IsEnabled="{Binding AreOptionsEnabled}"
                                    Command="{Binding EbForceActSequenceCommand}"
                                    Height="24"
                                    Margin="15,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2"
                        BorderThickness="1"
                        BorderBrush="#333"
                        CornerRadius="3">
                    <StackPanel Margin="10">
                        <TextBlock Text="Rykard"
                                   Margin="0,0,0,10" />
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Rykard no Mega Attack"
                                      IsChecked="{Binding IsRykardNoMegaEnabled}"
                                      Margin="0,2" />

                            <Border
                                Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                ToolTip="Lock his hp if you don't want snake attacks in p2 when he gets past 50%"
                                ToolTipService.InitialShowDelay='100'>
                                <TextBlock Text="i"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="10" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="3"
                        BorderThickness="1"
                        BorderBrush="#333"
                        CornerRadius="3">
                    <StackPanel Margin="10">
                        <TextBlock Text="Lion Main Boss"
                                   Margin="0,0,0,10" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Force Phase"></TextBlock>
                            <Button Content="Lightning"
                                    Command="{Binding SetLionMainBossLightningPhaseCommand}"
                                    Margin="10,0,0,0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="Frost"
                                    Command="{Binding SetLionMainBossFrostPhaseCommand}"
                                    Margin="10,0,0,0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>

                            <Button Content="Wind"
                                    Command="{Binding SetLionMainBossWindPhaseCommand}"
                                    Margin="10,0,0,0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>

                            <TextBlock Text="Lock Phase"
                                       Margin="30,0,0,0">
                            </TextBlock>
                            <CheckBox
                                IsChecked="{Binding IsLionMainBossPhaseLockEnabled}"
                                Margin="15,0,0,0">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="4"
                        BorderThickness="1"
                        BorderBrush="#333"
                        CornerRadius="3">
                    <StackPanel Margin="10">
                        <TextBlock Text="Lion Mini Boss"
                                   Margin="0,0,0,10" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Force Phase"></TextBlock>
                            <Button Content="Deathblight"
                                    Command="{Binding SetLionMiniBossDeathblightPhaseCommand}"
                                    Margin="10,0,0,0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                            <Button Content="Frost"
                                    Command="{Binding SetLionMiniBossFrostPhaseCommand}"
                                    Margin="10,0,0,0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>

                            <Button Content="Wind"
                                    Command="{Binding SetLionMiniBossWindPhaseCommand}"
                                    Margin="10,0,0,0">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>

                            <TextBlock Text="Lock Phase"
                                       Margin="30,0,0,0">
                            </TextBlock>
                            <CheckBox
                                IsChecked="{Binding IsLionMiniBossPhaseLockEnabled}"
                                Margin="15,0,0,0">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreOptionsEnabled" />
                                        <Binding Path="IsDlcAvailable" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>
        <TabItem Header="Boss Revives">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Areas" Margin="0,0,0,5" />

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding BossRevives.Groups}"
                             SelectedItem="{Binding BossRevives.SelectedGroup}"
                             BorderThickness="1"
                             BorderBrush="#333">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="Transparent"
                                                    Padding="8,4">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource AccentBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource HoverBrush}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Button Grid.Row="2"
                            Content="Warp"
                            Command="{Binding BossWarpCommand}"
                            IsEnabled="{Binding AreOptionsEnabled}"
                            Height="25"
                            Margin="0,10,0,0" />
                </Grid>

                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding BossRevives.SearchText, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Right"
                         Width="150"
                         Height="25"
                         VerticalAlignment="Center"
                         Margin="0,0,0,5">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3" />
                        </Style>
                    </TextBox.Resources>

                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  Focusable="false"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  VerticalAlignment="Center"
                                                  Margin="5,0,0,0" />
                                    <TextBlock x:Name="placeholderText"
                                               Text="Search locations..."
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="5,0,0,0"
                                               Foreground="Gray"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition
                                                                Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                                Value="" />
                                                            <Condition
                                                                Binding="{Binding Path=IsKeyboardFocused, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                                Value="False" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush"
                                            Value="{StaticResource AccentBrush}" />
                                    <Setter TargetName="border" Property="BorderThickness" Value="1.5" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            BorderThickness="1"
                            BorderBrush="#333">
                        <ListView ItemsSource="{Binding BossRevives.Items}"
                                  SelectedItem="{Binding BossRevives.SelectedItem}"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  BorderThickness="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        Margin="{TemplateBinding Padding}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource AccentBrush}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource HoverBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding BossName}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Area}"
                                                   Foreground="#888888"
                                                   FontStyle="Italic"
                                                   Margin="10,0,0,0"
                                                   Visibility="{Binding DataContext.BossRevives.IsSearchActive, 
                                           RelativeSource={RelativeSource AncestorType=UserControl}, 
                                           Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>

                <Border Grid.Row="2"
                        BorderThickness="1"
                        BorderBrush="#333"
                        CornerRadius="3"
                        Margin="0,10,0,0"
                        Grid.ColumnSpan="2">
                    <StackPanel Margin="10">

                        <Grid Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Row="0"  Grid.Column="0" Content="Revive Boss"
                                    Command="{Binding ReviveBossCommand}"
                                    IsEnabled="{Binding AreOptionsEnabled}"
                                    Margin="0,5, 20, 5" />
                            <Button Grid.Row="0"  Grid.Column="1" Content="Revive Boss as First Encounter"
                                    Command="{Binding ReviveBossFirstEncounterCommand}"
                                    IsEnabled="{Binding AreOptionsEnabled}"
                                    Margin="0,2" />
                            <Button Grid.Row="1"  Grid.Column="0" Content="Revive All Bosses"
                                    Command="{Binding ReviveAllBossesCommand}"
                                    IsEnabled="{Binding AreOptionsEnabled}"
                                    Margin="0,0, 20, 5"
                                    />
                            <Button Grid.Row="1"  Grid.Column="1" Content="Revive All Bosses as First Encounter"
                                    Command="{Binding ReviveAllBossesAsFirstEncounterCommand}"
                                    IsEnabled="{Binding AreOptionsEnabled}"
                                    Margin="0,2" />
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>