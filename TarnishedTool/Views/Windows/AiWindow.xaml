<Window x:Class="TarnishedTool.Views.Windows.AiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:converters="clr-namespace:TarnishedTool.Converters"
        xmlns:controls="clr-namespace:TarnishedTool.Controls"
        mc:Ignorable="d"
        Style="{StaticResource DefaultWindowStyle}"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="GoalWindow" Height="450" Width="1000">
    <Window.Resources>
        <converters:IndentConverter x:Key="IndentConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitleBar Grid.Row="0" Title="AI Info" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />

            </Grid.ColumnDefinitions>

            <CheckBox Grid.Row="0" Grid.Column="0"
                      Content="Show Goals"
                      IsChecked="{Binding IsShowGoalsEnabled}" />

            <ItemsControl Grid.Row="1" Grid.Column="0"
                          ItemsSource="{Binding FlatGoals}"
                          Visibility="{Binding IsShowGoalsEnabled, Converter={StaticResource BoolToVis}}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="{Binding IndentLevel, Converter={StaticResource IndentConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[" />
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="]" />
                                <TextBlock Text="{Binding Life, StringFormat=' life:{0:F2}'}" />
                                <TextBlock Text="{Binding TurnTime, StringFormat=' TurnTime:{0:F1}'}"
                                           Visibility="{Binding HasTurnTime, Converter={StaticResource BoolToVis}}" />
                            </StackPanel>
                            <TextBlock Text="{Binding FormattedParams, StringFormat='  Params: {0}'}"
                                       Visibility="{Binding HasParams, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <CheckBox Grid.Row="0" Grid.Column="1"
                      Content="Show Lua Timers"
                      IsChecked="{Binding IsShowLuaTimersEnabled}" />
            <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding LuaTimers}"
                          Visibility="{Binding IsShowLuaTimersEnabled, Converter={StaticResource BoolToVis}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Index}" Width="30" />
                            <TextBlock Text="{Binding Value}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <CheckBox Grid.Row="0" Grid.Column="2"
                      Content="Show Lua Numbers"
                      IsChecked="{Binding IsShowLuaNumbersEnabled}" />
            <ScrollViewer Grid.Row="1" Grid.Column="2" MaxHeight="350"
                          Visibility="{Binding IsShowLuaNumbersEnabled, Converter={StaticResource BoolToVis}}">
                <ItemsControl ItemsSource="{Binding LuaNumbers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Index}" Width="30" />
                                <TextBlock Text="{Binding Value}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <CheckBox Grid.Row="0" Grid.Column="3"
                      Content="Show Lua Numbers"
                      IsChecked="{Binding IsShowInterruptsEnabled}" />
           

        </Grid>

    </Grid>
</Window>