<windows:TopmostWindow x:Class="TarnishedTool.Views.Windows.AiWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:converters="clr-namespace:TarnishedTool.Converters"
                       xmlns:controls="clr-namespace:TarnishedTool.Controls"
                       xmlns:windows="clr-namespace:TarnishedTool.Views.Windows"
                       mc:Ignorable="d"
                       Style="{StaticResource DefaultWindowStyle}"
                       WindowStyle="None"
                       AllowsTransparency="True"
                       Title="GoalWindow" Height="800" Width="1300">
    <windows:TopmostWindow.Resources>
        <converters:IndentConverter x:Key="IndentConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </windows:TopmostWindow.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitleBar Grid.Row="0" Title="AI Info" />
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1.3*" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="4">
                <TextBlock HorizontalAlignment="Center" Text="{Binding ChrInsEntry.AiWindowDisplay}" />
                <Button
                    Margin="0,0,15,0"
                    Content="Overlay Mode"
                    Command="{Binding EnterOverlayModeCommand}"
                    Height="30"
                    HorizontalAlignment="Left" />

                <CheckBox
                    x:Name="AlwaysOnTopCheckBox"
                    Content="Always on Top"
                    HorizontalAlignment="Right"
                    Margin="10,0,0,0"
                    Checked="AlwaysOnTopCheckBox_Checked"
                    Unchecked="AlwaysOnTopCheckBox_Unchecked" />
            </Grid>

            <CheckBox Grid.Row="1" Grid.Column="0"
                      Content="Show Goals"
                      IsChecked="{Binding IsShowGoalsEnabled}" />

            <ItemsControl Grid.Row="2" Grid.Column="0"
                          ItemsSource="{Binding FlatGoals}"
                          Visibility="{Binding IsShowGoalsEnabled, Converter={StaticResource BoolToVis}}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="{Binding IndentLevel, Converter={StaticResource IndentConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[" />
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="]" />
                                <TextBlock Text="{Binding Life, StringFormat=' life:{0:F2}'}" />
                                <TextBlock Text="{Binding TurnTime, StringFormat=' TurnTime:{0:F1}'}"
                                           Visibility="{Binding HasTurnTime, Converter={StaticResource BoolToVis}}" />
                            </StackPanel>
                            <TextBlock Text="{Binding FormattedParams}"
                                       Visibility="{Binding HasParams, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <CheckBox Grid.Row="1" Grid.Column="1"
                      Content="Show Cooltimes"
                      IsChecked="{Binding IsShowCoolTimesEnabled}" />
            <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding CoolTimes}"
                          Visibility="{Binding IsShowCoolTimesEnabled, Converter={StaticResource BoolToVis}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="ID: " /><Run Text="{Binding AnimationId}" />
                            <Run Text=" Last used: " /><Run Text="{Binding TimeSinceLastAttack, StringFormat=F1}" />
                            <Run Text=" Cooldown: " /><Run Text="{Binding Cooldown, StringFormat=F1}" />
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <CheckBox Grid.Row="1" Grid.Column="2"
                      Content="Show SpEffects"
                      Margin="10,0,0,0"
                      IsChecked="{Binding IsShowSpEffectsEnabled}" />

            <Grid Grid.Row="2" Grid.Column="2" Grid.RowSpan="2"
                  Visibility="{Binding IsShowSpEffectsEnabled, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,10,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ID" Foreground="#888" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="1" Text="Time Left" Foreground="#888" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="2" Text="Duration" Foreground="#888" FontWeight="SemiBold" />
                    <TextBlock Grid.Column="3" Text="State Info" Foreground="#888" FontWeight="SemiBold" />
                </Grid>

                <ItemsControl Grid.Row="1"
                              Margin="10,0,0,0"
                              ItemsSource="{Binding SpEffectViewModel.ActiveEffects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Id}" Foreground="White" />
                                <TextBlock Grid.Column="1" Text="{Binding TimeLeft, StringFormat={}{0:F1}}"
                                           Foreground="#aaa" />
                                <TextBlock Grid.Column="2" Text="{Binding Duration, StringFormat={}{0:F1}}"
                                           Foreground="#666" />
                                <TextBlock Grid.Column="3" Text="{Binding StateInfo}" Foreground="White" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>


            <Grid Grid.Row="3" Grid.Column="0" ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Row="0" Grid.Column="0"
                          Content="Show Special Effect Observers"
                          IsChecked="{Binding IsShowSpEffectObservesEnabled}" />

                <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding SpEffectObserves}"
                              Visibility="{Binding IsShowSpEffectObservesEnabled, Converter={StaticResource BoolToVis}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="Target: " /><Run Text="{Binding TargetName}" />
                                <Run Text=" Special Effect ID: " /><Run Text="{Binding SpEffectId}" />
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <CheckBox Grid.Row="0" Grid.Column="1"
                          Content="Show Interrupts"
                          IsChecked="{Binding IsShowInterruptsEnabled}" />

                <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding InterruptHistory}"
                              Visibility="{Binding IsShowInterruptsEnabled, Converter={StaticResource BoolToVis}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <CheckBox Grid.Row="0" Margin="10,0,0,0" Grid.Column="2"
                          Content="Show Lua Timers"
                          IsChecked="{Binding IsShowLuaTimersEnabled}" />
                <ItemsControl Grid.Row="1" Grid.Column="2" Margin="10,0,0,0"
                              ItemsSource="{Binding LuaTimers}"
                              Visibility="{Binding IsShowLuaTimersEnabled, Converter={StaticResource BoolToVis}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Index}" Width="30" />
                                <TextBlock Text="{Binding Value}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <CheckBox Grid.Row="0" Grid.Column="3"
                          Margin="10,0,0,0"
                          Content="Show Lua Numbers"
                          IsChecked="{Binding IsShowLuaNumbersEnabled}" />
                <ScrollViewer Grid.Row="1" Grid.Column="3" MaxHeight="320" Margin="10,0,0,0"
                              VerticalAlignment="Top"
                              Visibility="{Binding IsShowLuaNumbersEnabled, Converter={StaticResource BoolToVis}}">
                    <ItemsControl ItemsSource="{Binding LuaNumbers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Index}" Width="30" />
                                    <TextBlock Text="{Binding Value}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>


        </Grid>

    </Grid>
</windows:TopmostWindow>