<Window x:Class="TarnishedTool.Views.Windows.CreateLoadoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converters="clr-namespace:TarnishedTool.Converters"
        xmlns:controls="clr-namespace:TarnishedTool.Controls"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextBrush}"
        BorderBrush="{StaticResource BorderBrush}"
        Title="Custom Loadouts" Height="600" Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:GreaterThanZeroVisibilityConverter x:Key="GreaterThanZeroVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:TitleBar Title="Custom Loadouts" />

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="0,0,0,10"
                    Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Loadout:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0" />

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding CustomLoadouts}"
                              SelectedItem="{Binding SelectedLoadout}"
                              DisplayMemberPath="Name"
                              Margin="0,0,10,0" />

                    <Button Grid.Column="2"
                            Content="New"
                            Command="{Binding CreateLoadoutCommand}"
                            Margin="0,0,5,0"
                            Padding="10,3" />

                    <Button Grid.Column="3"
                            Content="Rename"
                            Command="{Binding RenameLoadoutCommand}"
                            Margin="0,0,5,0"
                            Padding="10,3" />

                    <Button Grid.Column="4"
                            Content="Delete"
                            Command="{Binding DeleteLoadoutCommand}"
                            Padding="10,3"
                            Margin="0,0,5,0" />

                    <Button Grid.Column="5"
                            Content="Import"
                            Command="{Binding ImportLoadoutCommand}"
                            Padding="10,3"
                            Margin="0,0,5,0" />

                    <Button Grid.Column="6"
                            Content="Export"
                            Command="{Binding ExportLoadoutCommand}"
                            Padding="10,3" />
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="220" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Categories" Margin="0,0,0,5" />

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding ItemSelection.Categories}"
                             SelectedItem="{Binding ItemSelection.SelectedCategory}"
                             BorderThickness="1"
                             BorderBrush="#333">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="Transparent"
                                                    Padding="8,4">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource AccentBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource HoverBrush}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Quantity:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <xctk:IntegerUpDown Grid.Column="1"
                                                Value="{Binding ItemSelection.SelectedQuantity}"
                                                Minimum="1"
                                                Maximum="{Binding ItemSelection.MaxQuantity}"
                                                IsEnabled="{Binding ItemSelection.QuantityEnabled}"
                                                Increment="1" />
                        </Grid>

                        <StackPanel>

                            <!-- Weapon upgrades -->
                            <StackPanel
                                Visibility="{Binding ItemSelection.ShowWeaponOptions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Upgrade:"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0" />
                                    <xctk:IntegerUpDown Grid.Column="1"
                                                        Value="{Binding ItemSelection.SelectedUpgrade}"
                                                        Minimum="0"
                                                        Maximum="{Binding ItemSelection.MaxUpgradeLevel}"
                                                        IsEnabled="{Binding ItemSelection.CanUpgrade}"
                                                        Increment="1" />
                                </Grid>
                                
                                <!-- AoW options -->
                                <StackPanel
                                    Visibility="{Binding ItemSelection.ShowAowOptions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Ash of War:" Margin="0,0,0,5" />
                                    <ComboBox ItemsSource="{Binding ItemSelection.AvailableAshesOfWar}"
                                              SelectedItem="{Binding ItemSelection.SelectedAshOfWar}"
                                              DisplayMemberPath="Name"
                                              Margin="0,0,0,5" />
                                    <TextBlock Text="Affinity:" Margin="0,0,0,5" />
                                    <ComboBox ItemsSource="{Binding ItemSelection.AvailableAffinities}"
                                              SelectedItem="{Binding ItemSelection.SelectedAffinity}"
                                              Margin="0,0,0,5" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Spirit ash upgrades -->
                            <Grid Margin="0,0,0,5"
                                  Visibility="{Binding ItemSelection.ShowSpiritAshUpgradeOptions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Upgrade:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0" />
                                <xctk:IntegerUpDown Grid.Column="1"
                                                    Value="{Binding ItemSelection.SelectedSpiritAshUpgrade}"
                                                    Minimum="0"
                                                    Maximum="10"
                                                    Increment="1" />
                            </Grid>
                        </StackPanel>

                        <Button Content="Add To Loadout"
                                Click="AddToLoadout_Click"
                                Height="25"
                                Margin="0,10,0,0" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding ItemSelection.SearchText, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Right"
                             Width="150"
                             Height="25"
                             VerticalAlignment="Center"
                             Margin="0,0,0,5">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                    <Grid>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      Focusable="false"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalAlignment="Center"
                                                      Margin="5,0,0,0" />
                                        <TextBlock Text="Search items..."
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="5,0,0,0"
                                                   Foreground="Gray"
                                                   IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition
                                                                    Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                                    Value="" />
                                                                <Condition
                                                                    Binding="{Binding Path=IsKeyboardFocused, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                                    Value="False" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <Border Grid.Row="1"
                            BorderThickness="1"
                            BorderBrush="#333">
                        <ListView ItemsSource="{Binding ItemSelection.Items}"
                                  SelectedItem="{Binding ItemSelection.SelectedItem}"
                                  SelectionMode="Extended"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  BorderThickness="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <EventSetter Event="MouseDoubleClick" Handler="Item_MouseDoubleClick" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        Margin="{TemplateBinding Padding}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource AccentBrush}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource HoverBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding CategoryName}"
                                                   Foreground="#888888"
                                                   FontStyle="Italic"
                                                   Margin="10,0,0,0"
                                                   Visibility="{Binding DataContext.ItemSelection.IsSearchActive, 
                                                       RelativeSource={RelativeSource AncestorType=Window}, 
                                                       Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Current Loadout Items" Margin="0,0,0,5" />

                    <ListView Grid.Row="1"
                              ItemsSource="{Binding CurrentLoadoutItems}"
                              SelectedItem="{Binding SelectedLoadoutItem}"
                              SelectionMode="Extended"
                              BorderThickness="1"
                              BorderBrush="#333">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="8,4" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Margin="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource AccentBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource HoverBrush}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding ItemName}" />
                                        <TextBlock Text=" x" Margin="3,0,0,0" />
                                        <TextBlock Text="{Binding Quantity}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding AshOfWarName, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}">
                                        <TextBlock Text="{Binding AffinityName}" Foreground="#888888" FontSize="11" />
                                        <TextBlock Text=" / " Foreground="#888888" FontSize="11" />
                                        <TextBlock Text="{Binding AshOfWarName}" Foreground="#888888" FontSize="11" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Upgrade, StringFormat='+{0}'}"
                                               Foreground="#888888"
                                               FontSize="11"
                                               Visibility="{Binding Upgrade, Converter={StaticResource GreaterThanZeroVisibilityConverter}, FallbackValue=Collapsed}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Remove"
                                    Click="RemoveFromLoadout_Click"
                                    Padding="10,3"
                                    Margin="0,0,10,0" />
                            <Button Content="Save &amp; Close"
                                    Click="SaveButton_Click"
                                    Padding="10,3" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>