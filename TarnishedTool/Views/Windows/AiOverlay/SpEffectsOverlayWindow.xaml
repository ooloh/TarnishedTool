<aiOverlay:AiOverlayWindowBase x:Class="TarnishedTool.Views.Windows.AiOverlay.SpEffectsOverlayWindow"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:aiOverlay="clr-namespace:TarnishedTool.Views.Windows.AiOverlay"
                               mc:Ignorable="d"
                               Title="SpEffectsOverlayWindow" Height="600" Width="400">
    <aiOverlay:AiOverlayWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </aiOverlay:AiOverlayWindowBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Content="◐" Width="24" Height="20" FontSize="14"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="CycleOpacity_Click" Cursor="Hand" ToolTip="Opacity" />
                
                <Button Content="✕" Width="16" Height="16" FontSize="8"
                        Margin="4,0,0,0"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="Close_Click" Cursor="Hand" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Visibility="{Binding IsShowSpEffectsEnabled, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ID" FontWeight="SemiBold" />
                <TextBlock Grid.Column="1" Text="Time Left" FontWeight="SemiBold" />
                <TextBlock Grid.Column="2" Text="Duration" FontWeight="SemiBold" />
                <TextBlock Grid.Column="3" Text="State Info" FontWeight="SemiBold" />
            </Grid>
            <ItemsControl Grid.Row="1"
                          Margin="10,0,0,0"
                          ItemsSource="{Binding SpEffectViewModel.ActiveEffects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Id}" Foreground="White" />
                            <TextBlock Grid.Column="1" Text="{Binding TimeLeft, StringFormat={}{0:F1}}"
                                       Foreground="White" />
                            <TextBlock Grid.Column="2" Text="{Binding Duration, StringFormat={}{0:F1}}"
                                       Foreground="White" />
                            <TextBlock Grid.Column="3" Text="{Binding StateInfo}" Foreground="White" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</aiOverlay:AiOverlayWindowBase>