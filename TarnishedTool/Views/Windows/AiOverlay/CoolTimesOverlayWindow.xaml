<aiOverlay:AiOverlayWindowBase x:Class="TarnishedTool.Views.Windows.AiOverlay.CoolTimesOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:aiOverlay="clr-namespace:TarnishedTool.Views.Windows.AiOverlay"
        mc:Ignorable="d"
        Title="CoolTimesOverlayWindow" Height="450" Width="300">
    <aiOverlay:AiOverlayWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </aiOverlay:AiOverlayWindowBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" >
                <Button Content="◐" Width="24" Height="20" FontSize="14"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="CycleOpacity_Click" Cursor="Hand" ToolTip="Opacity" />
        
                <Button Content="✕" Width="16" Height="16" FontSize="8"
                        Margin="4,0,0,0"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="Close_Click" Cursor="Hand" />
            </StackPanel>
        </Grid>

       <ItemsControl Grid.Row="1" ItemsSource="{Binding CoolTimes}"
                     Margin="10,10,0,0"
                     Visibility="{Binding IsShowCoolTimesEnabled, Converter={StaticResource BoolToVis}}">
           <ItemsControl.ItemTemplate>
               <DataTemplate>
                   <TextBlock>
                       <Run Text="ID: " /><Run Text="{Binding AnimationId}" />
                       <Run Text=" Last used: " /><Run Text="{Binding TimeSinceLastAttack, StringFormat=F1}" />
                       <Run Text=" Cooldown: " /><Run Text="{Binding Cooldown, StringFormat=F1}" />
                   </TextBlock>
               </DataTemplate>
           </ItemsControl.ItemTemplate>
       </ItemsControl>
    </Grid>
</aiOverlay:AiOverlayWindowBase>
