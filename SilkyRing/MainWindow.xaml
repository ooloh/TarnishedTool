<Window x:Class="SilkyRing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SilkyRing.Controls"
        Title="SilkyRing"
        Height="720"
        Width="600"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextBrush}"
        BorderBrush="{StaticResource BorderBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <controls:TitleBar Title="Tarnished Tool" />

        <Grid Grid.Row="1" Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="AppVersion" Text=""
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Width="40"
                       Margin="10,0,0,0" />
            
            <!-- <Button x:Name="CheckUpdateButton" Content="Check for Updates" -->
            <!--         Grid.Column="1" -->
            <!--         Click="CheckUpdate_Click" -->
            <!--         Margin="5,0,5,0" -->
            <!--         HorizontalAlignment="Left" -->
            <!--         VerticalAlignment="Center"/> -->
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- <Button x:Name="LaunchGameButton" Content="Launch Game" -->
                <!--         Click="LaunchGame_Click" -->
                <!--         Margin="0,0,10,0" -->
                <!--         VerticalAlignment="Center"/> -->
                <TextBlock x:Name="IsAttachedText" Text=""
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Width="100"
                           Margin="0,0,10,0" />
            </StackPanel>
        </Grid>

        <TabControl x:Name="MainTabControl"
                    Grid.Row="2"
                    Background="Transparent"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top">
                            <TabPanel IsItemsHost="True" HorizontalAlignment="Left" />
                        </Grid>
                        <ContentPresenter ContentSource="SelectedContent" />
                    </DockPanel>
                </ControlTemplate>
            </TabControl.Template>
        </TabControl>
    </Grid>
</Window>
